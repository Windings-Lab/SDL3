{
  "version": 6,
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "generator": "Ninja",
      "installDir": "${sourceDir}/install/${presetName}",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "toolset": {
        "value": "host=x64",
        "strategy": "external"
      },
      "environment": {
        "NINJA_STATUS": "%p [%es] (%f/%t)  -"
      },
      "cacheVariables": {
        "BUILD_SHARED_LIBS": "OFF",

        "SDL3IMAGE_AVIF_SHARED": "OFF",
        "SDL3IMAGE_WEBP": "OFF",
        "SDL3IMAGE_XCF": "OFF",
        "SDL3IMAGE_TGA": "OFF",
        "SDL3IMAGE_TIF": "OFF",
        "SDL3IMAGE_JPG_SAVE": "OFF",
        "SDL3IMAGE_BACKEND_STB": "OFF",
        "SDL3IMAGE_BMP": "OFF",
        "SDL3IMAGE_JPG": "OFF",
        "SDL3IMAGE_AVIF_SAVE": "OFF",
        "SDL3IMAGE_AVIF": "OFF",
        "SDL3IMAGE_SVG": "OFF",
        "SDL3IMAGE_LBM": "OFF",
        "SDL3IMAGE_PCX": "OFF",
        "SDL3IMAGE_DEPS_SHARED": "OFF",
        "SDL3IMAGE_PNM": "OFF",
        "SDL3IMAGE_QOI": "OFF",
        "SDL3IMAGE_WEBP_SHARED": "OFF",
        "SDL3IMAGE_TIF_SHARED": "OFF",
        "SDL3IMAGE_GIF": "OFF",
        "SDL3IMAGE_XPM": "OFF",
        "SDL3IMAGE_XV": "OFF",
        "SDL3IMAGE_VENDORED": "OFF",

        "PNG_TESTS": "OFF",
        "PNG_SHARED": "OFF",

        "ZLIB_BUILD_EXAMPLES": "OFF",
        "ZLIB_USE_STATIC_LIBS": "ON",

        "SDL_STATIC": "ON",
        "SDL_SHARED": "OFF",
        "SDL_HIDAPI_LIBUSB": "OFF",
        "SDL_DUMMYVIDEO": "OFF",
        "SDL_HIDAPI_LIBUSB_SHARED": "OFF",
        "SDL_DIRECTX": "OFF",
        "SDL_VULKAN": "OFF",
        "SDL_HIDAPI": "OFF",
        "SDL_AVX": "OFF",
        "SDL_ASSEMBLY": "OFF",
        "SDL_POWER": "OFF",
        "SDL_LIBUDEV": "OFF",
        "SDL_VIRTUAL_JOYSTICK": "OFF",
        "SDL_OFFSCREEN": "OFF",
        "SDL_XINPUT": "OFF",
        "SDL_VIDEO": "ON",
        "SDL_GCC_ATOMICS": "OFF",
        "SDL_CAMERA": "OFF",
        "SDL_HAPTIC": "OFF",
        "SDL_JOYSTICK": "OFF",
        "SDL_TEST_LIBRARY": "OFF",
        "SDL_HIDAPI_JOYSTICK": "OFF",
        "SDL_SENSOR": "OFF",
        "SDL_DISABLE_INSTALL": "ON",
        "SDL_AVX2": "OFF",
        "SDL_AUDIO": "OFF",
        "SDL_AVX512F": "OFF",
        "SDL_LIBC": "OFF",
        "SDL_RENDER_METAL": "OFF",
        "SDL_RENDER": "OFF",
        "SDL_DIALOG": "OFF"
      }
    },
    {
      "name": "clang-debug",
      "inherits": "default",
      "environment": {
        "PATH": "D:/ImpPrograms/msys64/mingw64/bin"
      },
      "cacheVariables": {
        "CMAKE_COMMAND": "$env{PATH}/cmake.exe",
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "$env{PATH}/clang.exe",
        "CMAKE_CXX_COMPILER": "$env{PATH}/clang++.exe"
      }
    },
    {
      "name": "msvc-debug",
      "inherits": "default",
      "hidden": false,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "clang-cl",
        "CMAKE_CXX_COMPILER": "clang-cl"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "enableMicrosoftCodeAnalysis": true,
          "intelliSenseMode": "windows-clang-x64"
        }
      }
    }
  ],
  "buildPresets": [
    {
      "name": "verbose",
      "configurePreset": "clang-debug",
      "verbose": true
    }
  ]
}
